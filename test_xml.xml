<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.pythoncat.itemscroll.TestItemActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <com.pythoncat.itemscroll.view.SwipeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8d000000"
            android:orientation="horizontal"
            android:paddingEnd="6dp"
            android:paddingStart="4dp"
            app:showStyle="left">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="13dp"
                android:background="#88ff22ee"
                android:padding="8dp"
                android:textSize="24sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6deae000"
                android:padding="8dp"
                android:textSize="24sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="3dp"
                android:background="#dd22eeff"
                android:padding="8dp"
                android:textSize="24sp" />
        </com.pythoncat.itemscroll.view.SwipeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#88ff22ee"
            android:padding="8dp"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#6deae000"
            android:padding="8dp"
            android:textSize="24sp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#dd22eeff"
            android:padding="8dp"
            android:textSize="24sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="right" />
    </FrameLayout>
</LinearLayout>
